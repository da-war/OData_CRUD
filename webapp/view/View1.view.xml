<mvc:View
    controllerName="odatacrud.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <Table
            id="idProducts"
            items="{/Products}"
            fixedLayout="false"
        >
            <columns>
                <Column id="id-title">
                    <Text
                        id="idTitle"
                        text="ID"
                    />
                </Column>
                <Column id="name-title">
                    <Text
                        id="nameTitle"
                        text="Name"
                    />
                </Column>
                <Column id="price-title">
                    <Text
                        id="priceTitle"
                        text="Price"
                    />
                </Column>
                <Column id="rating-title">
                    <Text
                        id="ratingTitle"
                        text="Rating"
                    />
                </Column>
                <Column id="releaseDate-title">
                    <Text
                        id="releaseDateTitle"
                        text="Release Date"
                    />
                </Column>
                <Column id="btns-title">
                    <Text
                        id="buttons"
                        text=""
                    />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="columnListItems1">
                    <cells>
                        <Text
                            id="idData"
                            text="{ID}"
                        />
                        <Text
                            id="nameData"
                            text="{Name}"
                        />
                        <Text
                            id="priceData"
                            text="{Price}"
                        />
                        <Input
                            id="input"
                            value="{Rating}"
                            editable="false"
                        />
                        <Text
                            id="releaseDateData"
                            text="{ReleaseDate}"
                        />
                        <HBox id="btns">
                            <Button
                                id="something"
                                icon="sap-icon://edit"
                                text="Edit"
                                press="oEdit"
                            />
                            <Button
                                id="second"
                                icon="sap-icon://delete"
                                text="Delete"
                                class="sapUiSmallMarginBeginEnd"
                                type="Reject"
                                press="oDelete"
                            />
                            <Button
                                id="third"
                                icon="sap-icon://copy"
                                text="Duplicate"
                                type="Success"
                                press="oDuplicate"
                            />
                        </HBox>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
